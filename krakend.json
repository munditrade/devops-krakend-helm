{
  "version": 3,
  "name": "My lovely gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "extra_config": {
    "github_com/devopsfaith/krakend-gologging": {
      "level":  "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/graphql",
    "input_query_strings":[
      "query",
      "operationName",
      "variables"
    ],
    {
      "extra_config": {
          "modifier/martian": {
              "header.Modifier": {
                "scope": ["request"],
                "name": "x-hasura-admin-secret",
                "value": "{{ env "TERM" }}"
              }
          }
      }
  }
    "backend": [
          {
              "timeout": "4100ms",
              "host": ["http://hasura-dev.hasura"],
              "url_pattern": "/v1/graphql"
          }
      ]
  }
  ]
}